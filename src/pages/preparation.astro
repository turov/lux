---
import Layout from "../layouts/Layout.astro";
import data from "../data.json";
import Card from "../components/Card.astro";
const path = import.meta.env.PUBLIC_URL;
---

<Layout isMain={false}>
    <div class="hero hero--preparation" id="top">
        <div class="hero__container">
            <h2 class="hero__title">Preparation</h2>
            <p class="hero__desktop-desk">Electrolux offers a diverse range of product lines, spanning from Cook to
                Care, catering to every aspect of enhancing your home. Electrolux, tailored for passionate home
                enthusiasts, boasts luxurious design coupled with all the professional-grade features that discerning
                users desire.</p>
        </div>
    </div>
    <div class="hero-mobile-desc">
        <p>Electrolux offers a diverse range of product lines, spanning from Cook to
            Care, catering to every aspect of enhancing your home. Electrolux, tailored for passionate home
            enthusiasts, boasts luxurious design coupled with all the professional-grade features that discerning
            users desire.
        </p>
        <div class="divider"></div>
    </div>

    <section class="sub" id="blender">
        <div class="sub__container">
            <h2 class="sub__title">Blender</h2>
            <p class="sub__desc">Electrolux offers a diverse range of product lines, spanning from Cook to Care,
                catering to every aspect of enhancing your home. Electrolux, tailored for passionate home enthusiasts,
                boasts luxurious design coupled with all the professional-grade features that discerning users
                desire.
            </p>
            <ul class="sub__list">
                {data.filter((item) => item.category === "Preparation" && item.subcategory === "Blender").map((item) => (
                        <Card item={item}></Card>
                ))}
            </ul>

        </div>
    </section>

    <section class="sub" id="mixer">
        <div class="sub__container">
            <h2 class="sub__title">Mixer</h2>
            <p class="sub__desc">Electrolux offers a diverse range of product lines, spanning from Cook to Care,
                catering to every aspect of enhancing your home. Electrolux, tailored for passionate home enthusiasts,
                boasts luxurious design coupled with all the professional-grade features that discerning users
                desire.
            </p>
            <ul class="sub__list">
                {data.filter((item) => item.category === "Preparation" && item.subcategory === "Mixer").map((item) => (
                        <Card item={item}></Card>
                ))}
            </ul>

        </div>
    </section>


</Layout>
